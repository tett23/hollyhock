    =javascript_include_tag '/javascripts/jquery', '/javascripts/jquery-ujs'
  %body
    %header
      %h1=link_to 'donuthole.org', '/'
      %nav.clearfix
        %ul
          %li=link_to 'top', '/'
          %li=link_to 'about', '/about'
          %li=link_to 'article', '/articles'
          %li=link_to 'novel', '/novels'
          %li=link_to 'admin', '/admin'
    #content
      =yield
