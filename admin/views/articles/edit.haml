.block
  .secondary-navigation
    %ul.wat-cf
      %li.first=link_to pat(:list), url(:articles, :index)
      %li=link_to pat(:new), url(:articles, :new)
      %li.active=link_to pat(:edit), url(:articles, :edit, :id => @static_page.id)
  .content
    %h2.title
      =pat(:edit)
      =mt(:static_page)
      =button_to pat(:show), @static_page.route, :target=>:_blank, :method => :get, :class => :button_to
    .inner
      -form_for :static_page, url(:articles, :update, :id => @static_page.id), :method => :put, :class => :form do |f|
        =partial "articles/form", :locals => { :f => f }

-content_for :sidebar, partial("base/sidebar")
