.block
  .secondary-navigation
    %ul.wat-cf
      %li.first=link_to pat(:list), url(:pages, :index)
      %li=link_to pat(:new), url(:pages, :new)
      %li.active=link_to pat(:edit), url(:pages, :edit, :id => @page.id)
  .content
    %h2.title
      =pat(:edit)
      =mt(:page)
      =button_to pat(:show), @page.href, :target=>:_blank, :method => :get, :class => :button_to
    .inner
      -form_for :page, url(:pages, :update, :id => @page.id), :method => :put, :class => :form do |f|
        =partial "pages/form", :locals => { :f => f }

-content_for :sidebar, partial("base/sidebar")
